{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - My Categories
{% endblock %}
{% block content %}
    {% for category in categories %}

<div class="row">

        <article class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <h1><a href="article.php?id={{ category.id }}">{{ category.name }}</a></h1>
        <img title="{{ category.name }}" alt="{{ category.name }}" src="{{ category.image }}">
        </article>
</div>



    {% endfor %}
{% endblock %}
